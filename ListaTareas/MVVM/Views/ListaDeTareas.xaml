<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaTareas.MVVM.Views.ListaDeTareas"
             Title="Lista de Tareas"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- ðŸŽ¨ HEADER MODERNO -->
            <Frame BackgroundColor="White" 
                   HasShadow="True"
                   CornerRadius="0"
                   Padding="25,30,25,25"
                   Margin="0,0,0,20">

                <VerticalStackLayout Spacing="20">
                    <!-- TÃ­tulo principal con emoji -->
                    <Label Text="ðŸ“‹ Mis Tareas"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#2c3e50"
                           HorizontalOptions="Center" />

                    <!-- EstadÃ­sticas en cards coloridas -->
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                        <!-- Card Total -->
                        <Frame BackgroundColor="#3498db"
                               HasShadow="True"
                               CornerRadius="15"
                               Padding="20,15">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="ðŸ“Š" FontSize="22" />
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding TotalTareas}"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="Total"
                                           FontSize="12"
                                           TextColor="White" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Card Completadas -->
                        <Frame BackgroundColor="#27ae60"
                               HasShadow="True"
                               CornerRadius="15"
                               Padding="20,15">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="âœ…" FontSize="22" />
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding TareasCompletadas}"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="Listas"
                                           FontSize="12"
                                           TextColor="White" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>

                    <!-- Botones de acciÃ³n modernos -->
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Button Text="ðŸ”„ Actualizar"
                                BackgroundColor="#6c757d"
                                TextColor="White"
                                FontAttributes="Bold"
                                WidthRequest="140"
                                HeightRequest="45"
                                CornerRadius="22"
                                Command="{Binding LoadCommand}" />

                        <Button Text="âž• Nueva Tarea"
                                BackgroundColor="#e74c3c"
                                TextColor="White"
                                FontAttributes="Bold"
                                WidthRequest="140"
                                HeightRequest="45"
                                CornerRadius="22"
                                Clicked="ShowAddTarea" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- ðŸ“‹ LISTA DE TAREAS -->
            <VerticalStackLayout Padding="20,0,20,20" Spacing="15">
                <CollectionView ItemsSource="{Binding lstTareas}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Card elegante para cada tarea -->
                            <Frame BackgroundColor="White"
                                   HasShadow="True"
                                   CornerRadius="18"
                                   Padding="25"
                                   Margin="0,0,0,15">

                                <VerticalStackLayout Spacing="15">

                                    <!-- Header de la tarea -->
                                    <Grid ColumnDefinitions="*,Auto">
                                        <!-- TÃ­tulo -->
                                        <Label Grid.Column="0"
                                               Text="{Binding Nombre}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="#2c3e50"
                                               LineBreakMode="WordWrap" />

                                        <!-- Badge de estado -->
                                        <Frame Grid.Column="1"
                                               BackgroundColor="{Binding EstadoColor}"
                                               HasShadow="False"
                                               CornerRadius="12"
                                               Padding="12,6"
                                               VerticalOptions="Start">
                                            <Label FontSize="10"
                                                   TextColor="White"
                                                   FontAttributes="Bold">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding Estado}" Value="True">
                                                        <Setter Property="Text" Value="âœ“ LISTO" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label" Binding="{Binding Estado}" Value="False">
                                                        <Setter Property="Text" Value="â³ PENDIENTE" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </Frame>
                                    </Grid>

                                    <!-- DescripciÃ³n -->
                                    <Label Text="{Binding Descripcion}"
                                           FontSize="15"
                                           TextColor="#7f8c8d"
                                           LineBreakMode="WordWrap" />

                                    <!-- Fecha con icono -->
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="ðŸ“…" FontSize="16" />
                                        <Label Text="{Binding TextoFecha}"
                                               FontSize="14"
                                               TextColor="{Binding ColorFecha}"/>
                                    </HorizontalStackLayout>

                                    <!-- Separador visual -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#ecf0f1" />

                                    <!-- Botones de acciÃ³n -->
                                    <Grid ColumnDefinitions="*,10,*,10,*">

                                        <!-- BotÃ³n Toggle Estado -->
                                        <Button Grid.Column="0"
                                                Text="{Binding BotonTexto}"
                                                BackgroundColor="{Binding BotonColor}"
                                                TextColor="White"
                                                FontSize="11"
                                                FontAttributes="Bold"
                                                HeightRequest="38"
                                                CornerRadius="19"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.ToggleEstadoCommand}"
                                                CommandParameter="{Binding}" />

                                        <!-- BotÃ³n Editar -->
                                        <Button Grid.Column="2"
                                                Text="âœï¸ Editar"
                                                BackgroundColor="#3498db"
                                                TextColor="White"
                                                FontSize="11"
                                                FontAttributes="Bold"
                                                HeightRequest="38"
                                                CornerRadius="19"
                                                Clicked="ShowEditTareaPopUp" />

                                        <!-- BotÃ³n Eliminar -->
                                        <Button Grid.Column="4"
                                                Text="ðŸ—‘ï¸ Borrar"
                                                BackgroundColor="Transparent"
                                                BorderColor="#e74c3c"
                                                BorderWidth="2"
                                                TextColor="#e74c3c"
                                                FontSize="11"
                                                FontAttributes="Bold"
                                                HeightRequest="38"
                                                CornerRadius="19"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.DeleteCommand}"
                                                CommandParameter="{Binding Key}" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Mensaje cuando no hay tareas -->
                <VerticalStackLayout Spacing="20"
                                     Padding="40,60"
                                     HorizontalOptions="Center"
                                     IsVisible="False">
                    <VerticalStackLayout.Triggers>
                        <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding TotalTareas}" Value="0">
                            <Setter Property="IsVisible" Value="True" />
                        </DataTrigger>
                    </VerticalStackLayout.Triggers>

                    <Label Text="ðŸ“"
                           FontSize="80"
                           HorizontalOptions="Center"
                           Opacity="0.3" />
                    <Label Text="Â¡No hay tareas!"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#95a5a6"
                           HorizontalOptions="Center" />
                    <Label Text="Presiona 'Nueva Tarea' para empezar"
                           FontSize="16"
                           TextColor="#bdc3c7"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>